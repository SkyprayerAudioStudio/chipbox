<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.sigmabeta.chipbox">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- In order to be able to stop playback when phone calls happen. -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".ChipboxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/ThemeMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.file.FilesActivity"
            android:theme="@style/ThemeFileList"/>

        <activity
            android:name=".ui.navigation.NavigationActivity"
            android:theme="@style/ThemeNav"/>

        <activity
            android:name=".ui.player.PlayerActivity"
            android:theme="@style/ThemePlayer"
            android:launchMode="singleTask"/>

        <activity
            android:name=".ui.game.GameActivity"
            android:theme="@style/ThemeMain"/>

        <activity
            android:name=".ui.scan.ScanActivity"
            android:theme="@style/ThemeScan"
            android:screenOrientation="portrait"/>

        <service
            android:name=".backend.PlayerService"
            android:enabled="true"
            android:exported="false">

            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>

        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
