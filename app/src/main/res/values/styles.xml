<resources>

    <style name="ThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/background_grey</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/shared_return</item>
        <item name="android:windowEnterTransition">@transition/enter</item>
        <item name="android:windowReturnTransition">@transition/returns</item>
        <item name="android:windowExitTransition">@transition/exit</item>
        <item name="android:windowReenterTransition">@transition/reenter</item>
    </style>

    <style name="ThemeFileList" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background_grey</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ThemeNav" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background_grey</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/shared_return</item>
        <item name="android:windowEnterTransition">@transition/enter</item>
        <item name="android:windowReturnTransition">@transition/returns</item>
        <item name="android:windowExitTransition">@transition/exit</item>
        <item name="android:windowReenterTransition">@transition/reenter</item>
    </style>

    <style name="ThemePlayer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background_grey</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowSharedElementEnterTransition">@transition/shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/shared_return</item>
        <item name="android:windowEnterTransition">@transition/enter</item>
        <item name="android:windowReturnTransition">@transition/returns</item>
        <item name="android:windowExitTransition">@transition/exit</item>
        <item name="android:windowReenterTransition">@transition/reenter</item>
    </style>

    <style name="ThemeScan" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="TextScanItem" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextScanHeading" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/spacing_xlarge</item>
    </style>

    <style name="TextScanCountItem">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="TextScanCountLabel">
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextListTrackTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medlarge</item>
    </style>

    <style name="TextListTrackArtist" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medlarge</item>
    </style>

    <style name="TextListTrackLength" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
    </style>

    <style name="TextListTrackNumber" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextlistTrackTitlePlaying" parent="TextListTrackTitle">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextListTrackArtistPlaying" parent="TextListTrackArtist">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextListTrackLengthPlaying" parent="TextListTrackLength">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextListTrackNumberPlaying" parent="TextListTrackNumber">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="PlayerText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">@dimen/spacing_large</item>
        <item name="android:layout_marginEnd">@dimen/spacing_large</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
