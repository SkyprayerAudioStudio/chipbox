<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/relative_now_playing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_now_playing"
                android:background="@android:color/white"
                android:elevation="16dp"
                tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/text_playing_song_title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="The Island in the Void"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medlarge"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_playing_game_box_art"
        android:layout_toStartOf="@+id/fab_play_pause"/>

    <TextView
        android:id="@+id/text_playing_song_artist"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Yasunori Shiono"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medlarge"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/image_playing_game_box_art"
        android:layout_toStartOf="@+id/fab_play_pause"/>

    <ImageView
        android:id="@+id/image_playing_game_box_art"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_medium"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_play_pause"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:gravity="right|center_vertical"
        android:layout_margin="@dimen/spacing_small"
        android:src="@drawable/ic_play_48dp"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="?android:colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>